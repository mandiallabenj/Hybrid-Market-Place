    <div class="container-fluid">

        <div class="row">
            <div class="col-md-3">
                <div class="p-2 lead">
                    <div class="text-center">
                        <img class="mr-3 my-5 " src="{{asset('uploads/project/icons/'~ project.icon) }}" style="width:64px;height: 64px" alt="Generic placeholder image">
                    </div>
                    <div class="mt-2"  style="font-size:14px;" >
                        <p class="mt-2 text-center"><i class="text-success fa fa-check-circle"></i> Verified by Hybrid Market Place</p>
