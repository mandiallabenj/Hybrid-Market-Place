                                        <div class="input-group-append">
                                            <button class="btn btn-sm btn-outline-secondary" type="button" id="button-addon2">Accept</button>
                                        </div>
                                    </div>

                                </div>

                            </form>    
                        </div>
                    </div>



                </div>

                <div class="alert alert-danger">
                    {{form_start(form)}}
                    {{form_widget(form)}}
                    {{form_end(form)}}
                </div>

